<style>
    footer {
     margin-top: {{ section.settings.margin_top }}px;
     margin-bottom: {{ section.settings.margin_bottom }}px;
     padding-top: {{ section.settings.padding_top }}px;
     padding-bottom: {{ section.settings.padding_bottom }}px;
     background: #FCE8D8;
    }
    .cf_county-selector,
    .svg__wrapper-error{
      display: none;
    }
    .fm__title {
      font-size: 20px;
      font-weight: 700;
      color: #000000;
      line-height: 24px;
      margin-bottom: 20px;
    }
    .submenu,
    .cf__list-payment li{
      list-style: none;
      margin-bottom: 12px;
    }
    .submenu a{
      text-decoration: none;
      color: #000;
      line-height: 26px;
    }
    .submenu a:hover{
      text-decoration: underline;
    }
    .custom-newsletter p{
      color: #000000;
      font-size: 16px;
    }
    .custom-newsletter {
      justify-self: end;
      width: 80%;
    }
    .footer__top-wrapper {
      display: grid;
      grid-template-columns: 3fr 1fr;
    }
    .footer-menu {
      display: grid;
      grid-template-columns: repeat(3,1fr);
    }
    .email_inp {
        width: 100%;
        border: none;
        border: 1px solid rgb(191 193 191);
        padding: 15px 13px;
        outline: none;
        margin-top: 16px;
    }
    .email_inp:focus-visible{
      outline: none;
      outline-offset: 0;
      box-shadow: unset;
    }

    .email_inp::placeholder{
      color: #000;
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
    .btn_submit{
      margin-top: 24px;
      background: var(--Primary-Color, #000000);
      padding: 16px 25px;
      color: var(--White, var(--White, #FFF));
      font-size: 16px;
      font-weight: 400;
      max-width: 150px;
      cursor: pointer;
      border: none;
      transition: background-color .1s,color .1s,border-color .1s,opacity .1s;
    }
    .btn_submit:hover{
      background: rgb(254 196 140);
    }
    .form__message {
      justify-content: center;
    }
    .cf-errror_msg {
      display: unset;
      color: #000;
    }
    .footer__bottom-content {
      margin-top: 10rem;
      display: flex;
      justify-content: space-between;
    }
    .copyright__content {
      font-size: 13px;
      line-height: 18px;
      color: #000;
    }
    .cf__list-payment {
      display: flex;
      gap: 12px;
    }
    .social__icon-wrapper {
      display: flex;
      gap: 10px;
      --icon-size: 23px;
      margin-top: 30px;
    }
    .social__icon .icon {
      height: 24PX;
      width: 24PX;
      color: #000;
    }
  @media screen and (max-width: 890px){
     footer {
       margin-top: {{ section.settings.margin_top-m }}px;
       margin-bottom: {{ section.settings.margin_bottom-m }}px;
       padding-top: {{ section.settings.padding_top-m }}px;
       padding-bottom: {{ section.settings.padding_bottom-padding_bottom-m }}px;
    }
    .footer__top-wrapper {
      display: grid;
      grid-template-columns: 1fr;
    }  
    .footer-menu {
      display: grid;
      grid-template-columns: 1fr;
      justify-self: start;
    }  
    .footer-menu ul{
      padding: 0;
    }  
   .custom-newsletter {
      justify-self: start;
      width: 100%;
    }
    .cf__list-payment {
      padding: 0;
      flex-wrap: wrap;
    }
    .footer__bottom-content {
      flex-direction: column-reverse;
    }
    .copyright__country-wrapper {
      display: flex;
      flex-direction: column;
    }
    .copyright__content {
      text-wrap: nowrap;
      letter-spacing: 0;
    }
    .cf__region .disclosure .disclosure__button {
      margin: 0;
    }
  }
</style>

<footer class="footer color-{{ section.settings.color_scheme }} ">
  <div class="footer__top-wrapper width page-width">
    <div class="footer-menu">
      {% for block in section.blocks %}
        {% if block.type == 'navigation' %}
          <ul>
            <h2 class="fm__title ">{{ block.settings.linklist.title }}</h2>
            {% for link in block.settings.linklist.links %}
              <li class="menu__wrapper submenu">
                <a class="menu" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      {% endfor %}
    </div>
    <div class="custom-newsletter">
      <h2 class="fm__title">Newsletter</h2>
      <p>{{ section.settings.rte }}</p>
      <div class="form__wrapper">
        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div
            class="newsletter-form__field-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {%- if form.errors -%}
              <small
                class="newsletter-form__message form__message cf-errror_msg"
                id="Newsletter-error--{{ section.id }}"
              >
                <div class="svg__wrapper-error">{%- render 'icon-error' -%}</div>
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </small>
            {%- endif -%}
            <div class="">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="email_inp"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="Newsletter-error--{{ section.id }}"
                {% elsif form.posted_successfully? %}
                  aria-describedby="Newsletter-success--{{ section.id }}"
                {% endif %}
                placeholder="Your email"
                required
              >
              <div>
                <button
                  type="submit"
                  class="btn_submit"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                >
                  Sign Up
                </button>
              </div>
            </div>
          </div>
          {%- if form.posted_successfully? -%}
            <h3
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="Newsletter-success--{{ section.id }}"
              tabindex="-1"
              autofocus
            >
              {% render 'icon-success' -%}
              {{- 'newsletter.success' | t }}
            </h3>
          {%- endif -%}
        {% endform %}
      </div>
      <div class="social__icon-wrapper">
        <div class="social__icon">{% render 'all-icons', name: 'facebook' %}</div>
        <div class="social__icon">{% render 'all-icons', name: 'youtube' %}</div>
        <div class="social__icon">{% render 'all-icons', name: 'instagram' %}</div>
        <div class="social__icon">{% render 'all-icons', name: 'tiktok' %}</div>
        <div class="social__icon">{% render 'all-icons', name: 'twitter' %}</div>
        <div class="social__icon">{% render 'all-icons', name: 'thread' %}</div>
      </div>
    </div>
  </div>
  <div class="footer__bottom ">
    <div class="footer__bottom-content width page-width">
      {% for block in section.blocks %}
        {% if block.settings.copyright != blank %}
          <div class="copyright__country-wrapper">
            <div class="footer__column footer__localization isolate">
              {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
                <noscript>
                  {%- form 'localization', id: 'FooterCountryFormNoScript', class: 'localization-form' -%}
                    <div class="localization-form__select">
                      <h2 class="visually-hidden" id="FooterCountryLabelNoScript">
                        {{ 'localization.country_label' | t }}
                      </h2>
                      <select
                        class="localization-selector link"
                        name="country_code"
                        aria-labelledby="FooterCountryLabelNoScript"
                      >
                        {%- for country in localization.available_countries -%}
                          <option
                            value="{{ country.iso_code }}"
                            {%- if country.iso_code == localization.country.iso_code %}
                              selected
                            {% endif %}
                          >
                            {{ country.name }} ({{ country.currency.iso_code }}
                            {{ country.currency.symbol }})
                          </option>
                        {%- endfor -%}
                      </select>
                      {% render 'icon-caret' %}
                    </div>
                    <button class="button button--tertiary">{{ 'localization.update_country' | t }}</button>
                  {%- endform -%}
                </noscript>
                <localization-form>
                  {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
                    <div class="no-js-hidden cf__region">
                      <h2 class="caption-large cf_county-selector text-body" id="FooterCountryLabel">
                        {{ 'localization.country_label' | t }}
                      </h2>
                      {%- render 'country-localization', localPosition: 'FooterCountry' -%}
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}
  
              {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                <noscript>
                  {%- form 'localization', id: 'FooterLanguageFormNoScript', class: 'localization-form' -%}
                    <div class="localization-form__select">
                      <h2 class="visually-hidden" id="FooterLanguageLabelNoScript">
                        {{ 'localization.language_label' | t }}
                      </h2>
                      <select
                        class="localization-selector link"
                        name="locale_code"
                        aria-labelledby="FooterLanguageLabelNoScript"
                      >
                        {%- for language in localization.available_languages -%}
                          <option
                            value="{{ language.iso_code }}"
                            lang="{{ language.iso_code }}"
                            {%- if language.iso_code == localization.language.iso_code %}
                              selected
                            {% endif %}
                          >
                            {{ language.endonym_name | capitalize }}
                          </option>
                        {%- endfor -%}
                      </select>
                      {% render 'icon-caret' %}
                    </div>
                    <button class="button button--tertiary">{{ 'localization.update_language' | t }}</button>
                  {%- endform -%}
                </noscript>
  
                <localization-form>
                  {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form-new' -%}
                    <div class="no-js-hidden">
                      <h2 class="caption-large text-body" id="FooterLanguageLabel">
                        {{ 'localization.language_label' | t }}
                      </h2>
                      {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}
            </div>
            <div class="copyright__content">
            {{ block.settings.copyright }}
          </div>
          </div>
          <div class="footer__column footer__column--info">
            {%- if section.settings.payment_enable -%}
              <div class="footer__payment">
                <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
                <ul class="list list-payment cf__list-payment" role="list">
                  {%- for type in shop.enabled_payment_types -%}
                    <li class="list-payment__item">
                      {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</footer>

