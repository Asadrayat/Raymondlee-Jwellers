{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }}  .swiper-wrapper{
    transition-timing-function: linear !important;
  }
  .badge__img {
    max-width: 72px;
    width: 100%;
    height: auto;
    object-fit: cover;     
    transition: all 1s ease-in;       
    {% comment %} overflow: hidden;        {% endcomment %}
    @media(width < 768px) {
      {% comment %} max-width: 50px; {% endcomment %}
    }
  }
  .wrapper-{{ id }} .content__wrapper {
    color: #000;
    font-style: normal;
    font-weight: 400;
    width: max-content;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .wrapper-{{ id }} .content__wrapper:hover .badge__img {
    transform: scale(1.15);
  }
  .wrapper-{{ id }} p{
    margin: 8px 0 0 0;
  }
  .wrapper-{{ id }} .swiper-slide{
    display: flex;
    justify-content: center;
    {% comment %} box-sizing: border-box; {% endcomment %}
  }
  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h2 class="--section-title">{{ section.settings.heading }}</h2>
    <div class="wrapper-{{ id }}">
      <div class="swiper badges-{{ id }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <a href="{{ block.settings.link }}">
              <div class="content__wrapper">
                {% if block.settings.badge != blank %}
                  <div class="badge__img">
                    {{ block.settings.badge | image_url: width: block.settings.badge.width | image_tag }}
                  </div>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p>{{ block.settings.text }}</p>
                {% endif %}
              </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const swiperOptions = {
      slidesPerView: 2.5,
      spaceBetween: 12,
      breakpoints: {
        500: {
          slidesPerView: 2.8,
          spaceBetween: 12,
        },
        850: {
          slidesPerView: 4.6,
          spaceBetween: 12,
        },
        969: {
          slidesPerView: 5.2,
          spaceBetween: 12,
        },
        1200: {
          slidesPerView: 7,
          spaceBetween: 64,
        },
      },
    };

    // Conditionally add autoplay if screen width < 600
    if (screen.width < 600) {
      swiperOptions.loop = true;
      //swiperOptions.speed = 5000;
      swiperOptions.autoplay = {
        delay: 5000,
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      };
    }

    new Swiper('.badges-{{ id }}.swiper', swiperOptions);
  });
</script>

