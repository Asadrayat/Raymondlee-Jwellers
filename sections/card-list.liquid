{% liquid
  assign id = section.id
%}

<style>
      #shopify-section-{{id}} {
        box-sizing: border-box;
        margin-top: {{section.settings.margin_top | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
        padding-top: {{section.settings.padding_top | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
        overflow: hidden;
      }

      @media(max-width: 768px) {
        #shopify-section-{{id}} {
          margin-top: {{section.settings.margin_top_m | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
          padding-top: {{section.settings.padding_top_m | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
        }
      }
      #shopify-section-{{id}}{
.top-wrapper {
    text-align: center;
    margin-bottom: 24px;
}
.content--wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 16px;
    border: 1px solid #CCCCCC;
    border-radius: 5px;
    padding: 24px;
}
.text--wrapper {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
}
        .card--title{
            color: var(--Color-Dark-500, #0B0404);
            margin: 0;
            font-family: Prata;
            font-size: 24px;
            font-style: normal;
            font-weight: 400;
            line-height: 140%; /* 42px */
            letter-spacing: -0.6px;    
            text-align: center;  
            @media(max-width: 768px){
                font-size: 24px;
            } 
        }
        .card--des{
            color: var(--Color-Gray-700, #44403C);
            margin: 0;
            font-family: Lato;
            font-size: 16px;
            font-style: normal;
            font-weight: 400;
            line-height: 150%; /* 24px */    
            text-align: center;    
            @media(max-width: 768px){
                font-size: 14px;
            } 
        }
        .img--wrapper img{
            max-width: 100%;
        }
        .title{
            color: var(--Color-Dark-500, #0B0404);
            margin: 0;
            font-family: Prata;
            font-size: 36px;
            font-style: normal;
            font-weight: 400;
            line-height: 129%; /* 46.44px */
            letter-spacing: -0.72px;
            @media(max-width: 768px){
                font-size: 28px;
            } 
        }
        .card-grid-container{
          display: grid;
          grid-template-columns: repeat(3, minmax(0,1fr));
          gap: 24px;
          @media(max-width: 768px){
            grid-template-columns: minmax(0,1fr);
            gap: 16px;
          }
        }
        /* Swiper Navigation */
        .collection-list-wrapper{
          position: relative;
        }
        .swiper-button-next:after,
        .swiper-button-prev:after {
          content: 'none';
        }
        .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
          display: none!important;
        }
        #slider-next--{{ section.id }} {
          color: #000;
          width: 40px;
          height: 40px;
          position: absolute;
          right: 0;
          top: 50%;
          display: flex;
          padding: 8px;
          align-items: center;
          border-radius: var(--rounded-full, 999999px);
          background: #FFF;
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          transform: translateX(50%);
          z-index: 2;
          @media(max-width: 768px){
            transform: unset;
          }
        }
        #slider-next--{{ section.id }} svg{
          width: 24px;
          height: 24px;
        }
       #slider-prev--{{ section.id }}{
          color: #000;
          width: 40px;
          height: 40px;
          position: absolute;
          left: 0;
          top: 50%;
          display: flex;
          padding: 8px;
          align-items: center;
          border-radius: var(--rounded-full, 999999px);
          background: #FFF;
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          transform: translateX(-50%);
          z-index: 2;
          @media(max-width: 768px){
            transform: unset;
          }
       }
       #slider-prev--{{ section.id }} svg{
          width: 24px;
          height: 24px;
       }
      .swiper:not(.swiper-initialized) .swiper-slide {
          max-width: calc(var(--page-width)/{{ section.settings.slides_per_view }}) !important;
          margin-right: 16px;
          overflow: hidden;
          @media(max-width: 768px){
            max-width: calc(var(--page-width)/{{ section.settings.slides_per_view_mbl }}) !important;
          }
      }
    }



  {% comment %} .sec-{{ id }}{
  .--navigation-wrapper {
          position: relative;
          margin-block: 20px;
          display: flex;
          gap: 5px;
        }
      .--arrow-wrapper {
          display: flex;
          gap: 10px;

      }

      .--scrollbar-wrapper{
        position: relative;
      }

     .--nav-icon {
          width: 40px;
          height: 40px;
          display: flex;
         {% if section.settings.color == "light" %}
            background: #fff;
           {% else %}
            background: #ffffffd1;
           {% endif %}

          line-height: 1;
          /* position: absolute; */
          top: 50%;
          z-index: 1;
          border-radius: 50%;
          align-items: center;
          justify-content: center;
          /* transform: translateY(-50%); */
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          cursor: pointer;
          z-index: 2;
      }

     {% if section.settings.color == "light" %}
            .--nav-icon:hover {
              @media(min-width: 769px){
              background: rgba(0, 0, 0, 0.32);
              }
            }
      {% else %}
          .--nav-icon:hover {
            @media(min-width: 769px){
              background: #fff;
            }
          }
        {% endif %}


      .--nav-icon.swiper-button-disabled {
          /* display: none; */
          opacity: 0.5;
      }
      .--nav-icon.swiper-button-disabled.swiper-button-lock {
         display: none;
      }
  } {% endcomment %}
</style>

<div class="sec-{{ id }}" id="collection-list--{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="top-wrapper">
        {% if section.settings.title != blank %}
          <h2 class="title">{{ section.settings.title }}</h2>
        {% endif %}
      </div>
      <div class="collection-list-wrapper">
        {% if section.settings.enable_slider == true %}
          <div class="swiper swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  {% if block.type == 'card' %}
                    <div class="content--wrapper">
                        <div class="img--wrapper">
                            {% if block.settings.image != null %}
                                {{
                                block.settings.image
                                | image_url: width: block.settings.image.width
                                | image_tag: class: 'card--img'
                                }}
                            {% endif %}
                        </div>  
                        <div class="text--wrapper">
                            <p class="card--title">{{ block.settings.title }}</p>
                            <p class="card--des">{{ block.settings.des }}</p>
                        </div>                      
                    </div>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
          {% comment %}
              <div class="swiper-button-next" id="slider-next--{{ section.id }}">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
            <div class="swiper-button-prev" id="slider-prev--{{ section.id }}">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
          {% endcomment %}

        {% else %}
          <div class="card-grid-container">
            {% for block in section.blocks %}
              <div class="card-grid">
                {% if block.type == 'card' %}
                    <div class="content--wrapper">
                        <div class="img--wrapper">
                            {% if block.settings.image != null %}
                                {{
                                block.settings.image
                                | image_url: width: block.settings.image.width
                                | image_tag: class: 'card--img'
                                }}
                            {% endif %}
                        </div>  
                        <div class="text--wrapper">
                            <p class="card--title">{{ block.settings.title }}</p>
                            <p class="card--des">{{ block.settings.des }}</p>
                        </div>                      
                    </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      {% comment %} {% if section.settings.enable_slider == true %}
        <div class="--navigation-wrapper">
          <div class="--arrow-wrapper">
            <div class="prev-{{ section.id }} --nav-icon">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
            <div class="next-{{ section.id }} --nav-icon">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
          </div>
        </div>
      {% endif %} {% endcomment %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".swiper-{{ section.id }}", {
      slidesPerView: {{ section.settings.slides_per_view_mbl }},
      spaceBetween: 12,
      breakpoints: {
        768: {
          slidesPerView: {{ section.settings.slides_per_view }},
          spaceBetween: 16,
        },
      }
    });
  });
</script>

<script>
function setEqualHeightv2(selector) {
  let divs = document.querySelectorAll(selector);
  let max = 0;
  // First pass: Calculate the maximum height
  divs.forEach((div) => {
    // let height = div.clientHeight;
    let temp = window.getComputedStyle(div);
    let height = parseFloat(temp.getPropertyValue("height"));
    
    if (height > max) {
      console.log("Height: ", height, " Max: ", max)
      max = height;
    } else {
      console.log("Lesser Height: ", height, " Max: ", max)
    }
  });
  // Second pass: Set all divs to the max height
  divs.forEach((div) => {
    console.log( "Set  Max: ", max)
    // console.log("Yo Yo")
    div.style.height = `${max}px`;
  });
}
