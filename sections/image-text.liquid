{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: {{  section.settings.bg }};
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

.wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat(2,1fr);
    align-items: center;
    @media(max-width: 600px) {
      grid-template-columns: 1fr;
      gap: var(--Spacing-Container-lg, 24px);
    }


.--image-wrapper {
    overflow: hidden;
    @media(max-width: 600px) {
       grid-row: 1/2;
     }
  img {
    width: 100%;
  }
   
}
  
.--text-block-container.--text-first {
    padding-right: var(--Spacing-Container-xl);
     @media(max-width: 600px) {
       padding-right: unset;
     }
}
.--text-block-container.--text-last {
    padding-left: var(--Spacing-Container-xl);
    @media(max-width: 600px) {
       padding-left: unset;
     }
}
.--text-block-container a{
    width: max-content;
}

h3.--title {
  color: var(--Color-Gray-950, #0C0A09);

  /* lg/Regular */
  font-family: "Noto Serif";
  font-size: 48px;
  font-style: normal;
  font-weight: 300;
  line-height: 126%; /* 60.48px */
  letter-spacing: -0.96px;
  margin: 0;
  @media(max-width: 768px) {
    font-size: 30px;
  }
}  

.--content {
    margin-block: var(--Spacing-Container-xs) 48px;
    color: #44403C;

    /* Text md/Medium */
    font-family: Lato;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 24px */
    @media(max-width: 768px){
    margin-block: var(--Spacing-Container-xs) 32px;
    }
}







.--icon-card-container {
    display: flex;
    gap: var(--Spacing-Container-lg);
}
.--card-wrapper {
    text-align: center;
    color: #000;
    font-family: var(--font-family-Body, "Neue Plak");
    font-size: var(--Font-Size-Paragraph-Small, 14px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Small, 20px);
    img {
      max-width: 50px;
      aspect-ratio: 1;
      margin: 0 auto var(--Spacing-Container-xs);
    }
}  
}
  
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="--image-wrapper">
              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
            </div>
          {% when 'text' %}
            <div class="--text-block-container {% if forloop.first %} --text-first {% else %}--text-last{% endif %}">
              <h3 class="--title">{{ block.settings.title }}</h3>
              <div class="--content">{{ block.settings.content }}</div>
              <div class="--icon-card-container">
                {% if block.settings.feature_1_label != blank and block.settings.feature_1_icon != blank %}
                  <div class="--card-wrapper">
                    {{ block.settings.feature_1_icon | image_url: width: 44 | image_tag }}
                    {{ block.settings.feature_1_label }}
                  </div>
                {% endif %}
                {% if block.settings.feature_2_label != blank and block.settings.feature_2_icon != blank %}
                  <div class="--card-wrapper">
                    {{ block.settings.feature_2_icon | image_url: width: 44 | image_tag }}
                    {{ block.settings.feature_2_label }}
                  </div>
                {% endif %}
                {% if block.settings.feature_3_label != blank and block.settings.feature_3_icon != blank %}
                  <div class="--card-wrapper">
                    {{ block.settings.feature_3_icon | image_url: width: 44 | image_tag }}
                    {{ block.settings.feature_3_label }}
                  </div>
                {% endif %}
              </div>
              {% unless block.settings.label == blank %}
                <a class="button brown {% if block.settings.show_full_btn %}full{% endif %}" href="{{ block.settings.btn_url }}">{{ block.settings.label }}{% unless block.settings.show_full_btn %} <span>{% render 'all-icons', name: 'btn_arrow' %}</span>{% endunless %}</a>
              {% endunless %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Text ",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
