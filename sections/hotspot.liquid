{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    .viewer-count {
      display: none;
    }
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  #shopify-section-{{id}} {
    .block-container{
      display: grid;
      grid-template-columns: repeat({{section.blocks.size}}, minmax(0,1fr));
      gap: 0;
      @media(max-width: 600px){
        grid-template-columns: minmax(0,1fr);
      }
    }
    .block-wrapper{
      position: relative;
    }
    .block-wrapper:last-child {
      @media(max-width: 600px){
        grid-row: 1;
      }
    }
    .img-wrapper{
      line-height: 0;
      position: relative;
      &::after {
        position: absolute;
        z-index: 1;
        background: transparent;
        content: "";
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }      
    }
    .img-wrapper img{
      width: 100%;
      height: auto;
      object-fit: cover;
      /* aspect-ratio: 1; */
      @media(max-width: 600px){
        {% if section.blocks.size == 2 %}
          aspect-ratio: 2/3;
        {% else %}
          aspect-ratio: unset;
        {% endif %}
      }
    }
    .desktop-img{
      @media (max-width: 600px) {
        display: none;
      }
    }
    .mobile-img{
      @media (min-width: 601px) {
        display: none;
      }
    }

    .text-container{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
      display: flex;
      padding-block: var(--Spacing-Section-Section-Vertical-Padding, 32px);
     {% if section.settings.alignment == 'top_left' %}
       justify-content: start;
       align-items: start;
     {% elsif section.settings.alignment == 'top_center' %}
       justify-content: center;
       align-items: start;
     {% elsif section.settings.alignment == 'top_right' %}
       justify-content: end;
       align-items: start;
     {% elsif section.settings.alignment == 'middle_left' %}
       justify-content: start;
       align-items: center;
     {% elsif section.settings.alignment == 'middle_center' %}
       justify-content: center;
       align-items: center;
     {% elsif section.settings.alignment == 'middle_right' %}
       justify-content: end;
       align-items: center;
     {% elsif section.settings.alignment == 'bottom_left' %}
       justify-content: start;
       align-items: end;
     {% elsif section.settings.alignment == 'bottom_center' %}
       justify-content: center;
       align-items: end;
     {% else %}
       justify-content: end;
       align-items: end;
     {% endif %}
      @media screen and (max-width: 600px){
       {% if section.settings.mobile_alignment == 'top_left' %}
         justify-content: start;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'top_center' %}
         justify-content: center;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'top_right' %}
         justify-content: end;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'middle_left' %}
         justify-content: start;
         align-items: center;
       {% elsif section.settings.mobile_alignment == 'middle_center' %}
         justify-content: center;
         align-items: center;
       {% elsif section.settings.mobile_alignment == 'middle_right' %}
         justify-content: end;
         align-items: center;
       {% elsif section.settings.mobile_alignment == 'bottom_left' %}
         justify-content: start;
         align-items: end;
       {% elsif section.settings.mobile_alignment == 'bottom_center' %}
         justify-content: center;
         align-items: end;
       {% else %}
         justify-content: end;
         align-items: end;
       {% endif %}
      }
    }
    .text-wrapper{
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: var(--Spacing-Container-md, 16px);
      max-width: 480px;
     {% if section.settings.content_alignment == 'left' %}
       align-items: start;
     {% elsif section.settings.content_alignment == 'right' %}
       align-items: end;
     {% else %}
       align-items: center;
     {% endif %}
     a {
        width: max-content;    
      }
    }
    .title-wrapper{
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-sm, 8px);
      margin: 0;
    }
    .title{
      color: var(--Content-Inverted-main, #F3F4F6);
      margin: 0;
      font-family: var(--font-family-Title, Krylon);
      font-size: var(--Font-Size-Heading-H2, 36px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 36px); /* 100% */
     {% if section.settings.content_alignment == 'left' %}
       text-align: left;
     {% elsif section.settings.content_alignment == 'right' %}
       text-align: right;
     {% else %}
       text-align: center;
     {% endif %}
    }
    .description{
      color: var(--Content-Inverted-main, #F3F4F6);
      margin: 0;
      font-family: var(--font-family-Body, "Aktiv Grotesk");
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px); /* 142.857% */
     {% if section.settings.content_alignment == 'left' %}
       text-align: left;
     {% elsif section.settings.content_alignment == 'right' %}
       text-align: right;
     {% else %}
       text-align: center;
     {% endif %}
    }

    /* hotspot styling */

    .hotspot {
      {% comment %} position: absolute;
      background-color: white;
      border: 2px solid black;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      z-index: 2;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transform: translate(-50%, -50%);
      border-radius: 32px;
      border: 1px solid #FFF;
      background: rgba(0, 0, 0, 0.30); {% endcomment %}
        position: absolute;
        border-radius: 50%;
        width: 46px;
        height: 46px;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transform: translate(-50%, -50%);
        border-radius: 32px;      
    }
    .hotspot::after {
        position: absolute;
        content: "";
        width: 106px;
        height: 106px;
        border: 1px solid #fff;
        border-radius: 50%;
        bottom: 23px;
        transform: translate(-50%, 100%);
        left: 50%;
        @media(max-width: 768px) {
          width: 82px;
          height: 82px;
        }
    }

  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="block-container">
        {% for block in section.blocks %}
          {% if block.type == 'grid' %}
            <div class="block-wrapper">
              <div class="img-wrapper img-wrapper--{{ block.id }}">
                {% if block.settings.mbl_img != blank %}
                  {{
                    block.settings.img
                    | image_url: width: block.settings.img.width
                    | image_tag: class: 'grid-img desktop-img'
                  }}
                  {{
                    block.settings.mbl_img
                    | image_url: width: block.settings.mbl_img.width
                    | image_tag: class: 'grid-img mobile-img'
                  }}
                {% else %}
                  {{ block.settings.img | image_url: width: block.settings.img.width | image_tag: class: 'grid-img' }}
                {% endif %}
              </div>
              <div class="text-container page-width">
                <div class="text-wrapper">
                  <div class="title-wrapper">
                    {% unless block.settings.title == blank %}
                      <h2 class="title">{{ block.settings.title }}</h2>
                    {% endunless %}
                    {% unless block.settings.des == blank %}
                      <p class="description">{{ block.settings.des }}</p>
                    {% endunless %}
                  </div>
                  {% unless block.settings.btn == blank %}
                    <div>
                      <a href="{{ block.settings.btn_url }}" class="button full outlined">
                        {{ block.settings.btn }}
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                              <g clip-path="url(#clip0_70_686)">
                              <path d="M17 7L7 17" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                              <path d="M8 7H17V16" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                              </g>
                              <defs>
                              <clipPath id="clip0_70_686">
                              <rect width="24" height="24" fill="white"></rect>
                              </clipPath>
                              </defs>
                            </svg>
                          
                        </span>
                      </a>
                    </div>
                  {% endunless %}
                </div>
              </div>
              <!-- Hotspot Links Start -->
              <style>
                .img-wrapper--{{ block.id }}::after{
                  backdrop-filter: brightness({{ block.settings.overlay }}%);            
                  @media(max-width: 768px) {
                    backdrop-filter: brightness({{ block.settings.overlay_m }}%);            
                  }
                }                          
                .hotspot-first--{{ block.id }}{
                  top: {{ block.settings.hotspot_top_1 }}%;
                  left: {{ block.settings.hotspot_left_1 }}%;
                  @media(max-width: 768px){
                    top: {{ block.settings.hotspot_top_mbl_1 }}%;
                    left: {{ block.settings.hotspot_left_mbl_1 }}%;
                  }
                }
                .hotspot-secound--{{ block.id }}{
                  top: {{ block.settings.hotspot_top_2 }}%;
                  left: {{ block.settings.hotspot_left_2 }}%;
                  @media(max-width: 768px){
                    top: {{ block.settings.hotspot_top_mbl_2 }}%;
                    left: {{ block.settings.hotspot_left_mbl_2 }}%;
                  }
                }
                .hotspot-third--{{ block.id }}{
                  top: {{ block.settings.hotspot_top_3 }}%;
                  left: {{ block.settings.hotspot_left_3 }}%;
                  @media(max-width: 768px){
                    top: {{ block.settings.hotspot_top_mbl_3 }}%;
                    left: {{ block.settings.hotspot_left_mbl_3 }}%;
                  }
                }
              </style>
              {% unless block.settings.hotspot_link_1 == blank %}
                <a
                  href="{{ block.settings.hotspot_link_1 }}"
                  class="hotspot hotspot-first--{{ block.id }}"
                >
                <svg xmlns="http://www.w3.org/2000/svg" width="47" height="47" viewBox="0 0 47 47" fill="none" style="&#10;">
                <rect x="0.957031" y="0.0449219" width="46" height="46" rx="23" fill="white" fill-opacity="0.3"/>
                <path d="M7.95703 23.0449C7.95703 14.2084 15.1205 7.04492 23.957 7.04492C32.7936 7.04492 39.957 14.2084 39.957 23.0449C39.957 31.8815 32.7936 39.0449 23.957 39.0449C15.1205 39.0449 7.95703 31.8815 7.95703 23.0449Z" fill="white"/>
                <path d="M23.957 18.5449V27.5449M28.457 23.0449L19.457 23.0449" stroke="#0B0404" stroke-width="0.7" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                </a>
              {% endunless %}
              {% unless block.settings.hotspot_link_2 == blank %}
                <a
                  href="{{ block.settings.hotspot_link_2 }}"
                  class="hotspot hotspot-secound--{{ block.id }}"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M7.99998 3.33325V12.6666M3.33331 7.99992H12.6666" stroke="white" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {% endunless %}
              {% unless block.settings.hotspot_link_3 == blank %}
