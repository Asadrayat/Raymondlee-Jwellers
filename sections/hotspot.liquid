                  href="{{ block.settings.hotspot_link_3 }}"
                  class="hotspot hotspot-third--{{ block.id }}"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M7.99998 3.33325V12.6666M3.33331 7.99992H12.6666" stroke="white" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {% endunless %}
              <!-- Hotspot Links End -->
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  {% comment %} document.addEventListener("DOMContentLoaded", e => {
    if(document.querySelectorAll("#shopify-section-{{ section.id }} a.hotspot")) {
      document.querySelectorAll("#shopify-section-{{ section.id }} a.hotspot").forEach(hotspot => {
        hotspot.addEventListener("click", e => {
          e.preventDefault()
          const url = hotspot.getAttribute("href")
          if(url) {
            {% comment %} const loadingAnimation = document.getElementById("loading-animation");
            loadingAnimation.classList.add("visible"); {% endcomment %}
            document.body.classList.add("adding-to-cart");
            fetch(url)
              .then((res) => res.text())
              .then((res) => {
                const html = new DOMParser().parseFromString(res, "text/html");
                if (html.querySelector(".pinfo-bundle-wrapper")) {
                  html.querySelector(".pinfo-bundle-wrapper").remove();
                }
                if (html.querySelector("product-information")) {
                  html
                    .querySelector("product-information")
                    .setAttribute("data-update-url", "false");
                }
                productQuickView.container.open(); 
                productQuickView.container.renderContent(
                  html.querySelector("#product-information-container").innerHTML
                );  
                window.viewerCountPastDay();             
                {% comment %} productQuickView.container.open();                            {% endcomment %}
              })
              .catch((err) => console.log(err))
              .finally(() => {                
                {% comment %} loadingAnimation.classList.remove("visible"); {% endcomment %}
                 document.body.classList.remove("adding-to-cart");   
              });
          }
        })
      })
    }
  }) {% endcomment %}
</script>

